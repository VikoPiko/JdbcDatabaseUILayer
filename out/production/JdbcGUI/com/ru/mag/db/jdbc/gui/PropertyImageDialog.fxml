<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="524.0" prefWidth="725.0" spacing="12.0" stylesheets="@app.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ru.mag.db.jdbc.controllers.PropertyImageController">
    <VBox alignment="TOP_CENTER" spacing="12" styleClass="card">
        <Label styleClass="label-title" text="Property Images" />
        <Separator />

        <TextField fx:id="listingId" promptText="Listing ID" />
        <TextField fx:id="imageUrl" promptText="Image URL (optional)" />

        <!-- Image Preview -->
        <ImageView fx:id="imagePreview" fitHeight="192.0" fitWidth="319.0" preserveRatio="true" smooth="true" />

        <Button onAction="#chooseImage" styleClass="button-secondary" text="Choose Image" />

        <Separator />

        <HBox alignment="CENTER" spacing="12">
            <Button onAction="#uploadImage" styleClass="button-primary" text="Create" />

            <Button styleClass="button-danger" text="Delete" />
        </HBox>

        <Button onAction="#getAllImages" styleClass="button-secondary" text="Show All" />
    </VBox>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
</VBox>
