<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="426.0" prefWidth="689.0" spacing="12.0" stylesheets="@app.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ru.mag.db.jdbc.controllers.PropertyController">
   <children>
     <VBox alignment="TOP_CENTER" styleClass="card">
         <Label layoutX="203.0" layoutY="14.0" styleClass="label-title" text="Property Overview">
             <font>
                 <Font size="24.0" />
             </font></Label>
         <TextField fx:id="propertyId" layoutX="510.0" layoutY="100.0" prefHeight="25.0" prefWidth="76.0" promptText="Property ID" />
         <Separator prefWidth="200.0" />
         <TextField fx:id="price" layoutX="14.0" layoutY="113.0" promptText="Price" />
         <Separator prefWidth="200.0" />
         <TextField fx:id="squareMeters" layoutX="14.0" layoutY="162.0" promptText="Square Meters" />
         <Separator prefWidth="200.0" />
         <TextField fx:id="location" layoutX="14.0" layoutY="209.0" promptText="Location (Latitude, Longtitude, City) comma separated)" />
         <Separator prefWidth="200.0" />
         <TextField fx:id="ownerId" layoutX="510.0" layoutY="231.0" prefHeight="25.0" prefWidth="76.0" promptText="Owner ID" />
         <Separator prefWidth="200.0" />
         <ComboBox fx:id="propertyTypeSelect" layoutX="14.0" layoutY="260.0" prefHeight="41.0" prefWidth="218.0" promptText="Select Property Type" visibleRowCount="3" />
         <Separator prefWidth="200.0" />
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
            <children>
               <Button mnemonicParsing="false" onAction="#createProperty" styleClass="button-primary" text="Create" />
               <Button mnemonicParsing="false" onAction="#updateProperty" styleClass="button-secondary" text="Update" />
               <Button mnemonicParsing="false" onAction="#deleteProperty" styleClass="button-danger" text="Delete" />
               <Button mnemonicParsing="false" onAction="#getPropertyById" styleClass="button-secondary" text="Find Property by ID" />
               <Button mnemonicParsing="false" onAction="#findByOwnerId" styleClass="button-secondary" text="Find Properties by Owner ID" />
            </children>
            <padding>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
         </HBox>
         <Separator prefWidth="200.0" />
     </VBox>
   </children>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
</VBox>
