<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center"
          hgap="10"
          vgap="10"
          prefHeight="350.0"
          prefWidth="350.0"
          xmlns="http://javafx.com/javafx/17.0.12"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.ru.mag.db.jdbc.gui.MainController">

    <columnConstraints>
        <ColumnConstraints halignment="CENTER"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints prefHeight="40"/>
        <RowConstraints prefHeight="40"/>
        <RowConstraints prefHeight="40"/>
        <RowConstraints prefHeight="40"/>
        <RowConstraints prefHeight="40"/>
    </rowConstraints>

    <children>
        <Button text="Show all products"
                onAction="#showAllProducts"
                GridPane.rowIndex="0"/>

        <Button text="Edit product"
                onAction="#editProduct"
                GridPane.rowIndex="1"/>

        <Button text="Search product"
                onAction="#searchProduct"
                GridPane.rowIndex="2"/>

<!--        <Button text="Show manufacturers"-->
<!--                onAction="#showManufacturers"-->
<!--                GridPane.rowIndex="3"/>-->

        <Button text="Edit manufacturer"
                onAction="#editManufacturer"
                GridPane.rowIndex="4"/>
    </children>
</GridPane>
