<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="434.0" prefWidth="664.0" spacing="14" stylesheets="@app.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>

    <VBox alignment="TOP_CENTER" spacing="12" styleClass="card">
        <Label styleClass="label-title" text="Successful Deals" />
        <Separator />

        <TextField fx:id="dealId" promptText="Deal ID" />
        <TextField fx:id="propertyId" promptText="Property ID" />
        <TextField fx:id="finalPrice" promptText="Final Price" />
        <TextField fx:id="agentId" promptText="Agent ID" />
        <TextField fx:id="clientId" promptText="Client ID" />

        <Separator />
        <HBox alignment="CENTER" spacing="12">
            <Button styleClass="button-primary" text="Create" />
            <Button styleClass="button-secondary" text="Update" />
            <Button styleClass="button-danger" text="Delete" />
        </HBox>

        <Button styleClass="button-secondary" text="Show All" />
    </VBox>
</VBox>
