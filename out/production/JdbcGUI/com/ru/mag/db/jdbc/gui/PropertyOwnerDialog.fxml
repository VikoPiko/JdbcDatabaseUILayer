<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="434.0" prefWidth="624.0" spacing="14" stylesheets="@app.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ru.mag.db.jdbc.controllers.PropertyOwnerController">

    <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>

    <VBox alignment="TOP_CENTER" prefHeight="378.0" prefWidth="574.0" spacing="12" styleClass="card">
        <Label styleClass="label-title" text="Property Owners" />
        <Separator />

        <TextField fx:id="personId" promptText="Owner Person ID" />
        <TextField fx:id="propertyId" promptText="Property ID" />

        <Separator />
        <HBox alignment="CENTER" spacing="12">
            <Button styleClass="button-primary" text="Create" />
            <Button styleClass="button-danger" text="Delete" />
        </HBox>

        <Button styleClass="button-secondary" text="Show All" />
      <Separator prefWidth="200.0" />
      <ComboBox fx:id="personSelector" prefHeight="41.0" prefWidth="239.0" promptText="Select Person" />
    </VBox>
</VBox>
